.carousel.slide#mySlider(data-bs-ride="carousel")

                        ol.carousel-indicators
                            li.active(data-bs-target="#mySlide" data-bs-slide-to="0").active
                            li.active(data-bs-target="#mySlide" data-bs-slide-to="1")
                            li.active(data-bs-target="#mySlide" data-bs-slide-to="2")
                        

                        .carousel-inner
                            .carousel-item.active
                                img(src="/img/slider1.png").d-block.img-fluid
                            
                            .carousel-item.active
                                img(src="/img/slider2.png").d-block.img-fluid
                            
                            .carousel-item.active
                                img(src="/img/slider1.png").d-block.img-fluid
                            
                        
                        a(href="#mySlider" data-bs-slide="prev").carousel-control-prev
                            span.carousel-control-prev-icon
                        
                        a(href="#mySlider" data-bs-slide="next").carousel-control-next
                            span.carousel-control-next-icon